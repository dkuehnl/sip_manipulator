#Building
FROM gcc:latest

RUN apt-get update && apt-get install -y \
    libncurses5-dev\
    libncursesw5-dev\
    nano\
    iproute2\
    tmux

#Docker-Arbeitsverzeichnis
WORKDIR /usr/src/app
COPY . . 

RUN ls -R /usr/src/app
#Binary erstellen
RUN gcc -o main menu/main.c menu/process_handling.c shared/log.c -I/shared/include -lncurses
RUN gcc -o manipulator server/main.c server/hmr.c shared/log.c -I/shared/include


COPY shared/config.txt /usr/src/app/

CMD ["sleep", "infinity"]

